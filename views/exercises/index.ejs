<% layout('layouts/boilerplate')%> <% exercises.forEach(function(exercise){ %>
<p><%= exercise.name %></p>
<p><%= exercise.descricao %></p>
<% exercise.images.forEach((img, i) => { %>
<div class="carousel-item <%= i === 0 ? 'active' : ''%>">
  <img src="<%= img.url%>" class="d-block w-100" alt="" />
</div>
<% }) %>
<div>
  <a class="btn btn-primary" href="/exercises/<%=exercise._id%>"
    >View <%=exercise.name%></a
  >
  <% if(!currentUser.exercicios_favoritos.includes( exercise._id )) {%>
  <a href="/add/<%= exercise._id%>">Favorite</a>
  <% }else{ %>
  <a href="/remove/<%= exercise._id%>">Remove from Favorites</a>
  <%} %>
</div>
<% }); %>
